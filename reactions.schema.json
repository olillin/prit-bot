{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    }
  },
  "additionalProperties": {
    "type": "object",
    "required": [
      "pattern",
      "emoji"
    ],
    "properties": {
      "pattern": {
        "description": "Regex pattern to check",
        "type": "string"
      },
      "emoji": {
        "description": "Emoji",
        "type": "string",
        "pattern": "^(.{0,2}|<:\\w+:\\d+>)$"
      }
    }
  }
}